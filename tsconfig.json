{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@prosdevlab/experience-sdk": ["packages/core/src"],
      "@prosdevlab/experience-sdk/*": ["packages/core/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "files": []
}
